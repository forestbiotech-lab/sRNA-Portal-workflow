doctype html
html
  head
    title="sRNA Plant Portal"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css",integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ",crossorigin="anonymous")
  body
    .header
      img(style="margin-left:30px;height:100px",src="/images/logo.png")    
      a(target="blank_",href="http://elixir-europe.org")
        img.tiny-logo-header(src="/images/elixir-logo-transparent-ultrasmall.png")
    .menu
      span.menuItem1 Login
      .miRPursuit-bar.btn-group
        span.activity State:
        span.state
        .progress(style="margin-left:5px; width:100px;height:16px;margin-top:4px;")
          .progress-bar(role="progressbar",aria-valuenow="0",aria-valuemin="0",aria-valuemax="100")

    .container-fluid(style="margin:0px;padding:0px;")
      .row.content-md-left(style="margin:0px")
        .sidePanel(style="width:20%;")
          include includes/sidePanel.pug  
        .mainPanel(style="width:79%")
          .content      
            block content
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
    script(src="/javascripts/actions.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/tether/1.3.1/js/tether.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js",integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn",crossorigin="anonymous")
    script(src="/javascripts/bootstrap3-typeahead.min.js")
    script(src="/javascripts/jquery.tablesorter.js")
    script(src="/javascripts/widget-resizable.js")
