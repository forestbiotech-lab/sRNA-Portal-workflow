html
  head
    title="sRNA Plant Portal"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/sidePanel.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/glyphicon.css')
    link(rel='stylesheet', href='/stylesheets/footer.css')
    link(rel='stylesheet', href='/stylesheets/miRPursuitPanel.css')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
    link(rel="stylesheet",type="text/css",href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.css")
  body
    .header
      a(target="blank_",href="/")
        img(style="margin-left:30px;height:100px",src="/images/logo.png")    
      a(target="blank_",href="http://elixir-europe.org")
        img.tiny-logo-header(src="/images/elixir-logo-transparent-ultrasmall.png")
    .menu
      span.menuItem1.d-none Login
      .miRPursuit-bar.btn-group.d-none
        span.activity State:
        .progress(style="margin-left:5px; width:100px;height:16px;margin-top:4px;")
          .progress-bar(role="progressbar",aria-valuenow="0",aria-valuemin="0",aria-valuemax="100")

    .container-fluid(style="margin:0px;padding:0px;")
      .row.content-md-left(style="margin:0px")
        .sidePanel(style="width:20%;")
          include includes/sidePanel.pug  
        .mainPanel(style="width:79%")
          .content      
            block content
    .footer
      include includes/footer.pug

    include includes/thirdpartyScripts.pug  
