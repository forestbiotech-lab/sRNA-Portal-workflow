extends layout

block content
  h1= title
  p Welcome to #{title}
  .card-block
    .container-fluid
      .row  
        .col-md-12
          .form-inline.searchDBform   
            label(for="searchBox") 
              h4 Query Database:
            select.custom-select(id="searchOptions",style="margin-left:10px")
              option(call="sequence") Sequence
              option(call="") Species
              option(call="name") miRNA name
              option(call="") Accession
              option(call="") Source
            input.form-control(id="searchText",placeholder="Search",type="text",style="margin-left:10px") 
            button.form-control.btn.btn-primary.DBsearch(role="button") Search DB
        
        .col-md-12
          //Annotation Table            
          table.table.table-bordered.tablesorter.resizableTable.DBvalues(hasResizable)
            thead
              tr.tableHeader
                th(title="Hint") Accession
                th(title="Hint") Name
                th(title="Hint") Arm
                th(title="Hint") Sequence
              tbody
                tr.sampleSource(hidden)
                  td(scope="row",dbAttr="Mature_miRNA_accession")
                  td(dbAttr="Mature_miRNA_name")
                  td(dbAttr="Mature_miRNA_arm")
                  td(dbAttr="Mature_miRNA_sequence")
                each row in tableValues 
                  tr.tableRow.DBvalues
                    td(scope="row")=row.Mature_miRNA_accession
                    td(title="Unique identifier so follow the annotations")=row.Mature_miRNA_name
                    td(title="Unique identifier so follow the annotations")=row.Mature_miRNA_arm
                    td(title="Unique identifier so follow the annotations")=row.Mature_miRNA_sequence
